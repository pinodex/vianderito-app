<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/secondary</item>
        <item name="colorAccent">@color/yellow</item>
    </style>

    <style name="AppTheme.WindowActivity" parent="AppTheme">
        <item name="colorAccent">@color/primaryLightWelcome</item>

        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/primaryWelcome</item>
        <item name="colorPrimary">@color/primaryWelcome</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorControlNormal">@color/tertiary</item>
        <item name="colorControlActivated">@color/tertiary</item>
    </style>

    <style name="AppTheme.Welcome" parent="AppTheme.Dark">
        <item name="android:windowBackground">@drawable/window_background</item>
    </style>

    <style name="AppTheme.Home" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/secondary</item>
        <item name="colorAccent">@color/primaryLightWelcome</item>

        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/yellow</item>
    </style>

</resources>
